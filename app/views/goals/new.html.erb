<h2>Create a Goal</h2>

<form action="<%= goals_url %>" method="post">
  <%= auth_token %>

  <label>
    Title
    <input type="text" name="goal[title]" value="Lose 50 lbs?">
  </label>

  <label>
    Body
    <input type="text" name="goal[body]" value="How about it fatty?">
  </label>

  <label>
  <input type="radio" name="goal[public]" value="false" <%= @goal.public == false ? "checked" : "" %>>
  Private
  </label>

  <label>
  <input type="radio" name="goal[public]" value="true" <%= @goal.public == true ? "checked" : "" %>>
  Public
  </label>

  <input type="submit" value="Submit">
</form>