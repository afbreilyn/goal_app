<h1>Welcome. You made it!</h1>

<a href="<%= new_goal_url %>">Create New Goal</a>
<br>
<h4>Goals:</h4><ul>
  <% current_user.goals.each do |goal| %>
  <li>
    <a href="<%= goal_url(goal) %>"><%= goal.title %></a>
  </li>
  <% end %>
</ul>

<br>

<h4>Comments:</h4>
<ul>
  <% @user.comments.each do |comment| %>
  <li>
    <%= comment.body %>
  </li>
  <% end %>

</ul>


<br>
<form action="<%= user_comments_url %>" method="post">
  <input type="hidden" name="user_comment[user_id]" value="<%= @user.id %>">
    <%= auth_token %>

    <label>
      Add Comment
      <input type="text" name="user_comment[body]">
    </label>
    <br>

    <input type="submit" value="Add Comment">
</form>